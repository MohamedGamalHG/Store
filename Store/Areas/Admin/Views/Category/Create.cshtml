@model Store.Models.Category

@{
    ViewData["Title"] = "Create";
    string urlAction = Context.Request.Path.ToString().Split("/")[2];
    urlAction = $"{urlAction[0].ToString().ToUpper()}{urlAction.Substring(1)}";
}

<h4 class="d-inline-block">Create @urlAction </h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" id="backToList" class="btn btn-danger">Back to List</a>

            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $('#backToList').on('click', function (e) {
            e.preventDefault();
            var check = confirm("Data That You Change It Will Not Saved !!")
            if (check)
                window.location = $(this).attr('href')
        })
    </script>
}
